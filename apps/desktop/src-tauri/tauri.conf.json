{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wormhole",
  "version": "0.1.0",
  "identifier": "io.wormhole.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Wormhole",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "overlay",
        "center": true,
        "minWidth": 900,
        "minHeight": 600,
        "hiddenTitle": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["wormhole"]
      }
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Mount remote folders locally via P2P",
    "longDescription": "Wormhole is a peer-to-peer distributed filesystem that lets you share folders with others using simple join codes. Recipients can mount shared folders as local drives - files are accessed directly over encrypted QUIC connections without cloud uploads.",
    "publisher": "Wormhole Team",
    "copyright": "Copyright 2024 Wormhole Team",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": "-",
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libfuse3-3"],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "release": "1"
      }
    }
  }
}
